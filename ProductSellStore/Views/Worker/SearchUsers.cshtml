@model ProductSellStore.ViewModel.UserViweModel;

<form asp-controller="Worker" asp-action="SearchUsers" method="get">
    <h1>Search For Users by UserName</h1>
    <p>
        <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>

</form>
@if (@Model!=null)
{
    <h3>@Model.Id</h3>

    <h4>
        @Model.UserName
    </h4>
    <h4>
        @Model.UserEmail
    </h4>
    <a class="btn btn-outline-dark mt-auto" asp-controller="Worker" asp-action="MakeUserWorker" asp-route-id="@Model.Id">Make them Worker</a>

}

