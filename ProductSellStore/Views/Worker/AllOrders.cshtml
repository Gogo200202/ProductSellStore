@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ProductSellStore.ViewModel.PagesViewModels.PageInfoOrders

<form asp-controller="Worker" asp-action="AllOrders" method="get">
    <p>
        Search by phone number:<input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>

</form>
@{
    if (@Model.curentPageNumber >= 1)
    {
        <a class="btn btn-outline-dark mt-auto" asp-controller="Worker" asp-action="AllOrders" asp-route-SearchString="@Model.WordsToSearch" asp-route-numberPage="@(Model.curentPageNumber-1)">Previos</a>

    }
}


@{
    if (@Model.HasNextPage)
    {
        <a class="btn btn-outline-dark mt-auto" asp-controller="Worker" asp-action="AllOrders" asp-route-SearchString="@Model.WordsToSearch" asp-route-numberPage="@(Model.curentPageNumber+1)">Next</a>

    }
}
<div class="container mt-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-10">
            <div class="rounded">
                <div class="table-responsive table-borderless">
                    <table class="table">
                        <thead>
                        <tr>
                            <th class="text-center">
                                <div class="toggle-btn">
                                    <div class="inner-circle"></div>
                                </div>
                            </th>
                            <th>Order id</th>
                            <th>User name</th>
                            <th>First name</th>
                            <th>Last name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                                <th>Address</th>
                                <th>Country</th>
                                <th>State</th>
                            <th>Zip</th>
                                <th>Amount</th>
                                <th>Description</th>
                            <th>Price of singel product</th>
                            <th>Created</th>
                            <th></th>
                        </tr>
                        </thead>
                    @{
                        foreach (var curentModel in Model.allOrders)
                        {
                            <tbody class="table-body">
                            <tr class="cell-1">
                                <td class="text-center">
                                    <div class="toggle-btn">
                                        <div class="inner-circle"></div>
                                    </div>
                                </td>
                               
                                <td>@curentModel.Id</td>
                                <td>@curentModel.User.UserName</td>
                                <td>@curentModel.FirstName</td>
                                <td>@curentModel.LastName</td>
                                <td>@curentModel.Email</td>
                                <td>@curentModel.PhoneNumber</td>
                                        <td>@curentModel.Address</td>
                                        <td>@curentModel.Country</td>
                                        <td>@curentModel.State</td>
                                        <td>@curentModel.Zip</td>
                                        <td>@curentModel.Amount</td>
                                        <td>@curentModel.Description</td>
                                        <td>@String.Format("{0:f2}", @curentModel.Item.Price)</td>
                                        <td>@curentModel.CreatedOn</td>
                                
                                
                            </tr>
                          
                            </tbody>
                        }
                    }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>