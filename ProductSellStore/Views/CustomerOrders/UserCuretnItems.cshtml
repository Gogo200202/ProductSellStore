

@model List<Models.ItemUser>


<section class="h-100">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">

                
               @{
                   if (@Model.Count()==0)
                   {
                       <h1>No items for now</h1>
                       return;
                   }

               }
               
               
                <div class="card rounded-3 mb-4">
                    @{
                         

                        foreach (var curentModels in Model)
                        {
                            
                                
                                <div class="card-body p-4">
                                    <div class="row d-flex justify-content-between align-items-center">
                                        <div class="col-md-2 col-lg-2 col-xl-2">
                                            <img src="@curentModels.Item.PhotoUrl"
                                                 class="img-fluid rounded-3" alt="..PhotoNotFound">
                                        </div>
                                        <div class="col-md-3 col-lg-3 col-xl-3">
                                            <p class="lead fw-normal mb-2">@curentModels.Item.Name</p>
                                        </div>
                                        
                                      

                                        <div class="col-md-1 col-lg-1 col-xl-1">
                                            <div>Amount </div>
                                        @if (curentModels.Amount>1)
                                            {
                                            <a asp-controller="CustomerOrders" asp-action="UpdataAmount" asp-route-itemId="@curentModels.Item.Id" asp-route-amount="@(curentModels.Amount-1)" type="button" class="btn btn-outline-primary">Remove</a>

                                        }
                                           <p class="lead fw-normal mb-2">@curentModels.Amount</p>
                                        <a asp-controller="CustomerOrders" asp-action="UpdataAmount" asp-route-itemId="@curentModels.Item.Id" asp-route-amount="@(curentModels.Amount+1)" type="button" class="btn btn-outline-primary">Add</a>

                                        </div>
                                        

                                        <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                            <h5 class="mb-0">$@curentModels.Item.Price</h5>

                                        </div>

                                        

                                    <div class="col-md-3">

                                        <a class="btn btn-outline-danger" asp-controller="CustomerOrders" asp-action="RemoverCuretnUserItem" asp-route-id="@curentModels.Item.Id">Delete</a>
                                        </div>
                                    </div>
                                </div>



                        }
                    }
                   

                    <div class="card">
                        <div class="card-body">
                            <a class="btn btn-warning btn-block btn-lg" asp-controller="Checkout" asp-action="Index">Make order</a>
                        </div>
                    </div>
                </div>
                
                
            </div>
        </div>

    </div>
    
  
</section>
