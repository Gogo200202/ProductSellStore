@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ProductSellStore.ViewModel.OrderViewModels.MakeOrder

<div class="row">
    <div class="col-md-4 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Your cart</span>
            <span class="badge badge-secondary badge-pill">3</span>
        </h4>
        
        <ul class="list-group mb-3">
            @{
                foreach (var item in ViewBag.Items)
                {
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">@item.curentItem.Name</h6>
                            <small class="text-muted">@item.curentItem.Description</small>
                            
                        </div>
                        <div>
                            <div>Amount</div>
                            <small class="text-muted">@item.curentAmount</small>
                        </div>
                        <span class="text-muted">$@item.curentItem.Price</span>

                    </li>
                  
                }
            }
           

            <li class="list-group-item d-flex justify-content-between">
                <span>Total (USD)</span>
                <strong>$@ViewBag.Total </strong>
            </li>
        </ul>

   
    </div>
    <div class="col-md-8 order-md-1">
        <h4 class="mb-3">Billing address</h4>

      <form asp-controller="Checkout" asp-action="Index" method="post" class="needs-validation">
        <div class="row">
          <div class="col-md-6 mb-3">
                    <label asp-for="@Model.FirstName" >First name</label>
                    <input asp-for="@Model.FirstName" type="text" class="form-control" id="firstName" placeholder="" value="" required>
                    <span asp-validation-for="@Model.FirstName" class="small text-danger"></span>
                 
          </div>
          <div class="col-md-6 mb-3">
            <label asp-for="LastName">Last name</label>
                    <input asp-for="LastName" type="text" class="form-control" id="lastName" placeholder="" value="" required>
                    <span asp-validation-for="LastName" class="small text-danger"></span>
                   
          </div>
        </div>

      

          <div class="mb-3">
              <label asp-for="Email" >Email <span class="text-muted">(Optional)</span></label>
                <input asp-for="Email " data-val="false" value="" type="text" class="form-control" id="email" placeholder="you@example.com" value="">
              <span asp-validation-for="Email" class="small text-danger"></span>
          </div>
          
          <div class="mb-3">
                <label asp-for="@Model.PhoneNumber">Phone Number <span class="text-muted"></span></label>
                <input asp-for="@Model.PhoneNumber" value="" type="text" class="form-control" id="phonenumber" placeholder="359+...." value="" required>
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
          
          </div>

          <div class="mb-3">
          <label asp-for="Address">Address</label>
            <input asp-for="Address" type="text" class="form-control" id="address" placeholder="1234 Main St" required>
                <span asp-validation-for="Address" class="small text-danger"></span>
        
        </div>

        

          <div class="row">
              <div class="col-md-5 mb-3">
                  <label asp-for="Country">Country</label>
                  <input asp-for="Country" type="text" class="form-control" id="country" placeholder="Country" required>
                    <span asp-validation-for="Country" class="small text-danger"></span>
                  
              </div>

              <div class="col-md-4 mb-3">
                  <label asp-for="State">State</label>
                  <input asp-for="State" type="text" class="form-control" id="State" placeholder="State" required>
                    <span asp-validation-for="Country" class="small text-danger"></span>
                  
              </div>
              <div class="col-md-3 mb-3">
                  <label asp-for="Zip">Zip</label>
                  <input asp-for="Zip" type="text" class="form-control" id="zip" placeholder="Zip" required>
                    <span asp-validation-for="Country" class="small text-danger"></span>
                  
              </div>
          </div>
          
          <div class="input-group">
                <label asp-for="Description" Name="Description" class="input-group-text">Description</label>
                <textarea asp-for="Description" data-val="false" value="" class="form-control" aria-label="With textarea"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
              </div>


        

       

      
            <hr class="mb-4">
            <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to checkout </button>
       
        
      </form>
    </div>
  </div>

  

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}
<script src="~/js/site.js"></script>