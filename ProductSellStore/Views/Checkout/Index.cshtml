@model ProductSellStore.ViewModel.MakeOrder
<div class="row">
    <div class="col-md-4 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Your cart</span>
            <span class="badge badge-secondary badge-pill">3</span>
        </h4>
        
        <ul class="list-group mb-3">
            @{
                foreach (var item in ViewBag.Items)
                {
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">@item.Name</h6>
                            <small class="text-muted">@item.Description</small>
                        </div>
                        <span class="text-muted">$@item.Price</span>
                    </li>
                  
                }
            }
           

            <li class="list-group-item d-flex justify-content-between">
                <span>Total (USD)</span>
                <strong>$@ViewBag.Total </strong>
            </li>
        </ul>

   
    </div>
    <div class="col-md-8 order-md-1">
        <h4 class="mb-3">Billing address</h4>

      <form asp-action="Index" method="post" class="needs-validation">
        <div class="row">
          <div class="col-md-6 mb-3">
                    <label asp-for="FirstName" >First name</label>
                    <input asp-for="FirstName" type="text" class="form-control" id="firstName" placeholder="" value="" required>
                    <span asp-validation-for="FirstName" class="small text-danger"></span>
                    <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label asp-for="LastName">Last name</label>
                    <input asp-for="LastName" type="text" class="form-control" id="lastName" placeholder="" value="" required>
                    <span asp-validation-for="LastName" class="small text-danger"></span>
                    <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>
        </div>

      

          <div class="mb-3">
              <label asp-for="Email" >Email <span class="text-muted">(Optional)</span></label>
              <input asp-for="Email " data-val="false" value="" type="text" class="form-control" id="email" placeholder="you@example.com">
          
          </div>
          
          <div class="mb-3">
                <label asp-for="PhoneNumber">Phone Number <span class="text-muted"></span></label>
                <input asp-for="PhoneNumber " data-val="false" value="" type="text" class="form-control" id="phonenumber" placeholder="you@example.com" required>
          
          </div>

          <div class="mb-3">
          <label asp-for="Address">Address</label>
            <input asp-for="Address" type="text" class="form-control" id="address" placeholder="1234 Main St" required>
                <span asp-validation-for="Address" class="small text-danger"></span>
          <div class="invalid-feedback">
            Please enter your shipping address.
          </div>
        </div>

        

          <div class="row">
              <div class="col-md-5 mb-3">
                  <label asp-for="Country">Country</label>
                  <input asp-for="Country" type="text" class="form-control" id="country" placeholder="Country" required>
                    <span asp-validation-for="Country" class="small text-danger"></span>
                  <div class="invalid-feedback">
                      Please enter your Country.
                  </div>
              </div>

              <div class="col-md-4 mb-3">
                  <label asp-for="State">State</label>
                  <input asp-for="State" type="text" class="form-control" id="State" placeholder="State" required>
                    <span asp-validation-for="Country" class="small text-danger"></span>
                  <div class="invalid-feedback">
                      Please enter your State.
                  </div>
              </div>
              <div class="col-md-3 mb-3">
                  <label asp-for="Zip">Zip</label>
                  <input asp-for="Zip" type="text" class="form-control" id="zip" placeholder="Zip" required>
                    <span asp-validation-for="Country" class="small text-danger"></span>
                  <div class="invalid-feedback">
                      Zip code required.
                  </div>
              </div>
          </div>
          
          <div class="input-group">
                <label asp-for="Description" Name="Description" class="input-group-text">Description</label>
                <textarea asp-for="Description" data-val="false" value="" class="form-control" aria-label="With textarea"></textarea>
          </div>


          <hr class="mb-4">
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="same-address">
            <label class="custom-control-label" for="same-address">Shipping address is the same as my billing address</label>
        </div>

        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="save-info">
          <label class="custom-control-label" for="save-info">Save this information for next time</label>
        </div>
   

      
            <hr class="mb-4">
            <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to checkout </button>
       
        
      </form>
    </div>
  </div>

  

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}